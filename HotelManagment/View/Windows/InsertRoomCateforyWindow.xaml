<Window x:Class="HotelManagment.View.Windows.InsertRoomCateforyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagment.View.Windows"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
       Title="Добавление данных о категории" Height="500" Width="400"  ResizeMode="NoResize"  >
  
    
    <Grid>
        <StackPanel>
            <Label  Content="Новая категория" HorizontalAlignment="Center" FontSize="40" FontFamily="Comic Sans MS"/>
            <TextBlock Margin="10,100,0,0"  Text="Введите наименование категории" FontSize="17" FontFamily="Comic Sans MS"/>
            <TextBox Margin="0,0,0,50" Name="InsertRoomCategory" Height="30" FontFamily="Comic Sans MS"/>
            

            <Button Name="BtnInsertCategory" Content="Добавить" FontSize="20" Height="40"  Width="150" Margin="0,30,0,0" Background="Bisque"  FontFamily="Comic Sans MS" Click="BtnInsertCategory_Click"/>
        </StackPanel>
    </Grid>
</Window>
